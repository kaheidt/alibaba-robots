{
  "name": "alibaba-robots",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node --require=dotenv/config server/index.js",
    "server:dev": "nodemon --require=dotenv/config server/index.js",
    "start": "cross-env NODE_ENV=production node --require=dotenv/config server/index.js",
    "dev:all": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "terraform:init": "cd terraform && terraform init",
    "terraform:plan": "cd terraform && terraform plan -var-file=terraform.tfvars",
    "terraform:apply": "cd terraform && terraform apply -var-file=terraform.tfvars",
    "terraform:import-oss": "cd terraform && terraform import -var-file=terraform.tfvars alicloud_oss_bucket.game_bucket",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:frontend": "vitest",
    "test:backend": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=server",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:ui": "vitest --ui",
    "cdn:upload": "node scripts/upload-to-cdn.js",
    "cdn:upload-with-build": "node scripts/upload-to-cdn.js --build"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@react-three/drei": "^10.0.6",
    "@react-three/fiber": "^9.1.2",
    "@react-three/postprocessing": "^3.0.4",
    "@types/three": "^0.175.0",
    "ali-oss": "^6.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "framer-motion": "^12.6.5",
    "mysql2": "^3.9.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.175.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.21.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/ali-oss": "^6.16.11",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "msw": "^2.7.4",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vitest": "^3.1.1"
  }
}
